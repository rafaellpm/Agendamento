uses
  UConexao;


{$R *.dfm}

procedure TFrmConsultaProduto.BitBtn1Click(Sender: TObject);
var _cons : string;

begin
  inherited;
  sqlstr := '';
  FDQuery1.close;
  FDQuery1.SQL.Clear;

  if Trim(CbConsultarPor.Text) = 'DESCRICAO' then
    _cons :='WHERE DESCRICAO like '+ QuotedStr(EdtConsulta.Text)

  else
  if Trim(CbConsultarPor.Text) = 'Cod.Interno' then
    _cons := 'WHERE ID_PRODUTO = ' + QuotedStr(EdtConsulta.Text)

  else
  if Trim(CbConsultarPor.Text) = 'Cod.Barras' then
    _cons := 'WHERE COD_EAN = ' + QuotedStr(EdtConsulta.Text);

  sqlstr := 'SELECT * FROM PRODUTOS ' + _cons ;
  ConsultaMySql(FDQuery1,sqlstr);
end;

end.
